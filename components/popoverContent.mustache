<div id="popover-{{domId}}-content" hidden>
  <div class="popover-body">
    <ul class="list-group list-group-flush wrap mb-2">
      <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="me-auto">
          <div class="fw-bold">Author</div>
        </div>
        {{author}}
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="me-auto">
          <div class="fw-bold">Version</div>
        </div>
        {{version}}
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-start">
        <div class="me-auto">
          <div class="fw-bold">Downloads</div>
        </div>
        {{downloadCount}}
      </li>
    </ul>
    <a href="#" class="btn btn-sencondary w-100 mb-1">Download Plugin</a>
    <a href="#" class="btn btn-primary w-100">Get Plugin in Joplin</a>
  </div>
</div>